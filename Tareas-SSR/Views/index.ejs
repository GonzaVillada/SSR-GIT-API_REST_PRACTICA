<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Tareas</title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://kit.fontawesome.com/b591f34f14.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/tsparticles@3.1.0/tsparticles.bundle.min.js"></script>


</head>
<body>
  <div id="bg"></div>
    <canvas id="particulas"></canvas>
<script>
  const canvas = document.getElementById("particulas");
  const ctx = canvas.getContext("2d");
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;

  const particulas = [];

  for (let i = 0; i < 80; i++) {
    particulas.push({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      r: Math.random() * 2 + 1,
      dx: (Math.random() - 0.5) * 0.5,
      dy: (Math.random() - 0.5) * 0.5,
      opacity: Math.random()
    });
  }

  function animar() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particulas.forEach(p => {
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
      ctx.fillStyle = `rgba(255, 255, 255, ${p.opacity})`;
      ctx.fill();

      p.x += p.dx;
      p.y += p.dy;

      if (p.x < 0 || p.x > canvas.width) p.dx *= -1;
      if (p.y < 0 || p.y > canvas.height) p.dy *= -1;
    });
    requestAnimationFrame(animar);
  }

  animar();

  window.addEventListener("resize", () => {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  });
</script>
  
 

  <h1>üìù Lista de Tareas (SSR con Node.JS + PHP API REST)</h1>

  <div class="listas">
    <!-- LISTA DE TAREAS PENDIENTES -->
    <div>
      <h2>Tareas Pendientes</h2>
      <ul id="pendientes">
        <% tareas.filter(t => !t.completada).forEach(t => { %>
          <li id="tarea-<%= t.id %>">
            <input 
              type="checkbox" 
              onchange="toggleCompletada(<%= t.id %>, this)"
              <%= t.completada ? 'checked' : '' %>
            >
            <span class="nombre-tarea"><%= t.nombre %></span>
            <button class="btn-eliminar" onclick="eliminarTarea(<%= t.id %>)">
              <i class="fa-solid fa-trash"></i>
            </button>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- LISTA DE TAREAS COMPLETADAS -->
    <div>
      <h2>Tareas Completadas</h2>
      <ul id="completadas">
        <% tareas.filter(t => t.completada).forEach(t => { %>
          <li id="tarea-<%= t.id %>">
            <input 
              type="checkbox" 
              checked 
              onchange="toggleCompletada(<%= t.id %>, this)"
            >
            <span class="nombre-tarea"><%= t.nombre %></span>
            <button class="btn-eliminar" onclick="eliminarTarea(<%= t.id %>)">
              <i class="fa-solid fa-trash"></i>
            </button>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>

  <!-- FORMULARIO PARA AGREGAR TAREAS -->
  <form id="formTarea">
    <input type="text" id="nuevaTarea" placeholder="Nueva tarea" required>
    <button type="submit">Agregar</button>
  </form>

  <script src="/script.js"></script>
</body>
</html>
